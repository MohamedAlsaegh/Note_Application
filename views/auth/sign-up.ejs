<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>NoteMind | Sign Up</title>

    <!-- Bootstrap CSS for styling -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-light">
    <!-- Shared navbar partial for consistent layout -->
    <%- include('../partials/navbar.ejs') %>

    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <!-- Sign-up form card layout -->
          <div class="card shadow p-4">
            <h2 class="text-center mb-4">Sign Up</h2>

            <!-- Sign-up form with multipart encoding for image upload -->
            <form
              action="/auth/sign-up"
              method="POST"
              enctype="multipart/form-data"
            >
              <!-- Username input -->
              <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input
                  type="text"
                  name="username"
                  id="username"
                  class="form-control"
                  placeholder="Enter username"
                  required
                />
              </div>

              <!-- About input -->
              <div class="mb-3">
                <label for="about" class="form-label">About You</label>
                <input
                  type="text"
                  name="about"
                  id="about"
                  class="form-control"
                  placeholder="Write something about yourself"
                />
              </div>

              <!-- Password input -->
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input
                  type="password"
                  name="password"
                  class="form-control"
                  placeholder="Password"
                  required
                />
              </div>

              <!-- Confirm password input -->
              <div class="mb-3">
                <label for="confirmPassword" class="form-label"
                  >Confirm Password</label
                >
                <input
                  type="password"
                  name="confirmPassword"
                  class="form-control"
                  placeholder="Confirm Password"
                  required
                />
              </div>

              <!-- Profile image file input -->
              <div class="mb-3">
                <label for="imageInput" class="form-label"
                  >Upload Profile Picture</label
                >
                <input
                  type="file"
                  name="image"
                  id="imageInput"
                  class="form-control"
                  accept="image/*"
                />
              </div>

              <!-- Preview container for image -->
              <div class="mb-3 text-center">
                <img
                  id="imagePreview"
                  src="#"
                  alt="Image Preview"
                  class="img-fluid rounded"
                  style="max-width: 200px; display: none"
                />
              </div>

              <!-- Submit button -->
              <button type="submit" class="btn btn-success w-100">
                Sign Up
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Script for live image preview -->
    <script>
      const imageInput = document.getElementById('imageInput')
      const imagePreview = document.getElementById('imagePreview')

      imageInput.addEventListener('change', function () {
        const file = this.files[0]
        if (file) {
          const reader = new FileReader()
          reader.onload = function (e) {
            imagePreview.src = e.target.result
            imagePreview.style.display = 'block'
          }
          reader.readAsDataURL(file)
        } else {
          imagePreview.src = '#'
          imagePreview.style.display = 'none'
        }
      })
    </script>
  </body>
</html>
