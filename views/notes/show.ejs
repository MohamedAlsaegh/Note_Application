<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>NoteMind - Notes</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <%- include('../partials/navbar') %>

    <div class="container py-5">
      <!-- Add Note Form - inputs side by side -->
      <div class="card shadow-sm mb-5">
        <div class="card-body">
          <h4 class="card-title text-primary mb-3">Add a New Note</h4>
          <form action="/notes" method="POST" class="row g-3 align-items-end">
            <div class="col-md-3">
              <label for="title" class="form-label">Title</label>
              <input
                type="text"
                name="title"
                id="title"
                class="form-control"
                placeholder="Title"
                required
              />
            </div>

            <div class="col-md-5">
              <label for="content" class="form-label">Content</label>
              <textarea
                name="content"
                id="content"
                class="form-control"
                placeholder="Content"
                rows="1"
                required
              ></textarea>
            </div>

            <div class="col-md-2">
              <label for="tag" class="form-label">Tag</label>
              <select name="tag" id="tag" class="form-select" required>
                <% allTags.forEach(tag => { %>
                <option value="<%= tag %>"><%= tag %></option>
                <% }) %>
              </select>
            </div>

            <input type="hidden" name="userId" value="<%= user._id %>" />

            <div class="col-md-2 d-grid">
              <button type="submit" class="btn btn-primary">Add Note</button>
            </div>
          </form>
        </div>
      </div>

      <!-- Notes by Tag - sections side by side, responsive -->
      <div class="row g-4">
        <% taggedNotes.forEach(section => { %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div
            class="card border-start border-4 border-primary shadow-sm h-100"
          >
            <div class="card-body d-flex flex-column">
              <h5 class="card-title text-secondary mb-3"><%= section.tag %></h5>

              <% if (section.notes.length > 0) { %>
              <ul class="list-group list-group-flush flex-grow-1">
                <% section.notes.forEach(note => { %>
                <li class="list-group-item">
                  <a
                    href="/notes/<%= note._id %>/edit"
                    class="text-decoration-none text-dark fw-medium"
                  >
                    <%= note.title %>
                  </a>
                </li>
                <% }) %>
              </ul>
              <% } else { %>
              <p class="text-muted mt-auto">No notes under this tag yet.</p>
              <% } %>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
